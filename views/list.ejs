<!DOCTYPE html>
<html>
<head>
    <title>Students List</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1>Student Management System</h1>
        <div class="user-info">
            Welcome, <strong><%= user.name %></strong>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>
    </header>
    
    <main>
        <div class="actions">
            <a href="/students/create" class="btn-create">+ Add New Student</a>
        </div>
        
        <h2>Students List (Total: <%= students.length %>)</h2>
        
        <% if (students.length === 0) { %>
            <p>No students found. Add your first student!</p>
        <% } else { %>
            <table>
                <tr>
                    <th>Student ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Course</th>
                    <th>Actions</th>
                </tr>
                <% students.forEach(student => { %>
                <tr>
                    <td><%= student.studentId %></td>
                    <td><%= student.name %></td>
                    <td><%= student.email %></td>
                    <td><%= student.course %></td>
                    <td class="action-buttons">
                        <a href="/students/<%= student._id %>" class="btn-view">View</a>
                        <a href="/students/<%= student._id %>/edit" class="btn-edit">Edit</a>
                        <a href="/students/<%= student._id %>/delete" 
                           onclick="return confirm('Delete this student?')" 
                           class="btn-delete">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </table>
        <% } %>
    </main>
</body>
</html>
